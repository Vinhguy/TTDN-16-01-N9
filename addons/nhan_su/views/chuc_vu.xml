<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_chuc_vu_form" model="ir.ui.view">
            <field name="name">chuc_vu.form</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ma_chuc_vu" readonly="1"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group string="Thông tin chức vụ">
                                <field name="ten_chuc_vu"/>
                                <field name="mo_ta"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Danh sách nhân viên">
                                <field name="nhan_vien_ids">
                                    <tree>
                                        <field name="ma_nhan_vien"/>
                                        <field name="ho_ten"/>
                                        <field name="phong_ban_id"/>
                                        <field name="email"/>
                                        <field name="so_dien_thoai"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_chuc_vu_tree" model="ir.ui.view">
            <field name="name">chuc_vu.tree</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_chuc_vu"/>
                    <field name="ten_chuc_vu"/>
                    <field name="mo_ta"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_chuc_vu_search" model="ir.ui.view">
            <field name="name">chuc_vu.search</field>
            <field name="model">chuc_vu</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_chuc_vu"/>
                    <field name="ten_chuc_vu"/>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_chuc_vu" model="ir.actions.act_window">
            <field name="name">Chức vụ</field>
            <field name="res_model">chuc_vu</field>
            <field name="view_mode">tree,form</field>
            <field name="search_view_id" ref="view_chuc_vu_search"/>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo chức vụ mới
                </p>
            </field>
        </record>
    </data>
</odoo>
