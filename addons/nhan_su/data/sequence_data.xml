<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data noupdate="1">
        <!-- Sequence cho mã nhân viên -->
        <record id="seq_nhan_vien" model="ir.sequence">
            <field name="name">Mã nhân viên</field>
            <field name="code">nhan_vien.sequence</field>
            <field name="prefix">NV</field>
            <field name="padding">4</field>
