            <field name="prefix">PB</field>
            <field name="padding">3</field>
            <field name="number_next">1</field>
            <field name="number_increment">1</field>
        </record>

        <!-- Sequence cho mã lịch sử làm việc -->
        <record id="seq_lich_su_lam_viec" model="ir.sequence">
            <field name="name">Mã lịch sử làm việc</field>
