<?xml version="1.0" encoding="utf-8"?>
<odoo>
    <data>
        <!-- Form View -->
        <record id="view_du_an_form" model="ir.ui.view">
            <field name="name">du_an.form</field>
            <field name="model">du_an</field>
            <field name="arch" type="xml">
                <form>
                    <sheet>
                        <div class="oe_title">
                            <h1>
                                <field name="ma_du_an" readonly="1"/>
                            </h1>
                        </div>
                        <group col="2">
                            <group string="Thông tin dự án">
                                <field name="ten_du_an"/>
                                <field name="ngay_bat_dau"/>
                                <field name="ngay_ket_thuc"/>
                                <field name="trang_thai"/>
                            </group>
                            <group string="Quản lý và Tổ chức">
                                <field name="quan_ly_du_an_id" options="{'no_create': True}"/>
                                <field name="phong_ban_thuc_hien_id" options="{'no_create': True}"/>
                                <field name="so_luong_thanh_vien" readonly="1"/>
                                <field name="ti_le_hoan_thanh" widget="progressbar" readonly="1"/>
                            </group>
                        </group>
                        <group col="2">
                            <group string="Ngân sách">
                                <field name="ngan_sach" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                                <field name="chi_phi_thuc_te" widget="monetary" options="{'currency_field': 'currency_id'}"/>
                            </group>
                            <group string="Mô tả">
                                <field name="mo_ta" nolabel="1"/>
                            </group>
                        </group>
                        <notebook>
                            <page string="Thành viên dự án">
                                <field name="thanh_vien_ids" widget="many2many_tags" options="{'no_create': True}"/>
                            </page>
                            <page string="Danh sách công việc">
                                <field name="cong_viec_ids">
                                    <tree>
                                        <field name="ma_cong_viec"/>
                                        <field name="ten_cong_viec"/>
                                        <field name="nguoi_phu_trach_id"/>
                                        <field name="muc_do_uu_tien"/>
                                        <field name="trang_thai"/>
                                        <field name="ti_le_hoan_thanh" widget="progressbar"/>
                                        <field name="ngay_bat_dau"/>
                                        <field name="ngay_ket_thuc"/>
                                    </tree>
                                </field>
                            </page>
                        </notebook>
                    </sheet>
                </form>
            </field>
        </record>

        <!-- Tree View -->
        <record id="view_du_an_tree" model="ir.ui.view">
            <field name="name">du_an.tree</field>
            <field name="model">du_an</field>
            <field name="arch" type="xml">
                <tree>
                    <field name="ma_du_an"/>
                    <field name="ten_du_an"/>
                    <field name="quan_ly_du_an_id"/>
                    <field name="phong_ban_thuc_hien_id"/>
                    <field name="so_luong_thanh_vien"/>
                    <field name="ti_le_hoan_thanh" widget="progressbar"/>
                    <field name="ngay_bat_dau"/>
                    <field name="ngay_ket_thuc"/>
                    <field name="trang_thai"/>
                </tree>
            </field>
        </record>

        <!-- Search View -->
        <record id="view_du_an_search" model="ir.ui.view">
            <field name="name">du_an.search</field>
            <field name="model">du_an</field>
            <field name="arch" type="xml">
                <search>
                    <field name="ma_du_an"/>
                    <field name="ten_du_an"/>
                    <filter string="Đang thực hiện" name="dang_thuc_hien" domain="[('trang_thai', '=', 'dang_thuc_hien')]"/>
                    <filter string="Hoàn thành" name="hoan_thanh" domain="[('trang_thai', '=', 'hoan_thanh')]"/>
                    <group expand="0" string="Group By">
                        <filter string="Trạng thái" name="group_trang_thai" context="{'group_by': 'trang_thai'}"/>
                    </group>
                </search>
            </field>
        </record>

        <!-- Action -->
        <record id="action_du_an" model="ir.actions.act_window">
            <field name="name">Dự án</field>
            <field name="res_model">du_an</field>
            <field name="view_mode">tree,form</field>
            <field name="help" type="html">
                <p class="o_view_nocontent_smiling_face">
                    Tạo dự án mới
                </p>
            </field>
        </record>
    </data>
</odoo>
